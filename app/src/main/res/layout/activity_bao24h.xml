<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Bao24hActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:background="#E6E1E1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:src="@drawable/logo_24h_new1"
                android:layout_width="60dp"
                android:layout_height="60dp">

            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_circle_img"
                android:layout_marginRight="20dp"
                android:src="@drawable/user"
                android:layout_gravity="end"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </de.hdodenhof.circleimageview.CircleImageView>


            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:src="@drawable/baseline_search_24"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>



        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>
    
    <com.google.android.material.tabs.TabLayout
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="#3c811e"
        app:tabMode="scrollable"
        android:background="#78b43d"
        android:id="@+id/tab_layout_bao24h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:background="#EAE6E6"
        android:id="@+id/view_page_2_bao24h"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager2.widget.ViewPager2>

</LinearLayout>